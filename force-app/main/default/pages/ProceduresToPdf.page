<apex:page name="ProceduresToPdf" controller="ProcedurePdfController" renderAs="pdf">
    <h1>List of Procedures (Currency: {!selectedCurrency})</h1>
    <table border="1" cellpadding="5" cellspacing="0">
        <tr>
            <th>Name</th>
            <th>Price ({!selectedCurrency})</th>
        </tr>
        <apex:repeat value="{!procedures}" var="p">
            <tr>
                <td>{!p.Name}</td>
                <td>{!p.ConvertedPrice}</td>
            </tr>
        </apex:repeat>
    </table>
</apex:page>
