<apex:page name="CentreProceduresToPdf" controller="CentreProcedurePdfController" renderAs="pdf">
    <h1>Procedures for Action Centre: {!centreName}</h1>
    <h3>Currency: {!selectedCurrency}</h3>
    <table border="1" cellpadding="5" cellspacing="0">
        <tr>
            <th>Name</th>
            <th>Price ({!selectedCurrency})</th>
        </tr>
        <apex:repeat value="{!procedures}" var="p">
            <tr>
                <td>{!p.Name}</td>
                <td>{!p.ConvertedPrice}</td>
            </tr>
        </apex:repeat>
    </table>
</apex:page>
